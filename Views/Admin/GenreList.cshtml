@model AdminGenresViewModel

<h1>Admin Genres</h1>

<div class="row">
	<div class="col-md-3">
		<form asp-controller="Admin" asp-action="GenreCreate" method="post">
			<div class="mb-3 form-floating">
				<input asp-for="Name" class="form-control" placeholder="Name" />
				<label asp-for="Name">Name</label>
				<span asp-validation-for="Name"></span>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>	
		</form>
	</div>

	<div class="col-md-5">
		<table class="table table-striped table-hover table-bordered border-dark">

			<thead>
				<tr>
					<th style="width:30px">#</th>
					<th>Name</th>
					<th style="width:40px">Count</th>
					<th style="width:150px"></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var genre in Model.Genres)
				{
					<tr>
						<td>@genre.GenreId</td>
						<td>@genre.Name</td>
						<td>@genre.Count</td>
						<td>
							<a asp-controller="admin" asp-action="genreupdate" asp-route-id="@genre.GenreId" class="btn btn-warning btn-sm">Update</a>

							<form asp-controller="admin" asp-action="genredelete" method="post" style="display: inline">
								<input type="hidden" name="genreId" value="@genre.GenreId"/>
								<button type="submit" class="btn btn-danger btn-sm">Delete</button>
							</form>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>
</div>