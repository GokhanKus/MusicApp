@model IEnumerable<AppRole>

<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate">Create Role</a>
<hr />

<table class="table table-sm table-bordered border-dark">

	<thead>
		<tr>
			<th>Id</th>
			<th>Role Name</th>
			<th>Users</th>
			<th style="width:120px"></th>
		</tr>
	</thead>

	<tbody>

		@if (Model.Count() == 0)
		{
			<tr>
				<td colspan="4" class="text-center">No Roles Found</td>
			</tr>
		}
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				 <td asp-role-users="@role.Id"></td> @*buradaki asp-role-users bizim olusturdugumuz ozel tag helper *@

				<td>
					<a asp-controller="Roles" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>

					<form asp-controller="Roles" asp-action="RoleDelete" method="post" onsubmit="return confirm('Are you sure?')" style="display:inline-block">
						<input type="hidden" name="name" value="@role.Name"/>
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>

					 @* <form method="post">
						<a class="btn btn-warning btn-sm" asp-controller="roles" asp-action="edit" asp-route-id="@role.Id">Edit</a>
						<button type="submit" class="btn btn-danger btn-sm">Delete</button>
					</form>  *@
				</td>
			</tr>
		}	
	</tbody>

</table>
