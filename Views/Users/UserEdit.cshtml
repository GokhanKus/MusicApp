@model EditUserViewModel

<h2>Edit User</h2>
<hr />

<form asp-controller="users" asp-action="edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<input name="Id" type="hidden" value="@Model.Id" />

	<div class="mb-3 form-floating">
		<input asp-for="FullName" class="form-control" placeholder="FullName"/>
		<label asp-for="FullName"></label>
	</div>

	<div class="mb-3 form-floating">
		<input asp-for="Email" class="form-control" placeholder="Email"/>
		<label asp-for="Email"></label>
	</div>


	<div class="card mb-3">
		<div class="card-header">
			Parola Güncelle
		</div>
		<div class="card-body">

			<div class="mb-3 form-floating">
				<input asp-for="Password" class="form-control" placeholder="Password"/>
				<label asp-for="Password"></label>
			</div>

			<div class="mb-3 form-floating">
				<input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword"/>
				<label asp-for="ConfirmPassword"></label>
			</div>
		</div>

	</div>

	<div class="card mb-3">
		<div class="card-header">
			Roller
		</div>
		<div class="card-body">

			@foreach (var role in ViewBag.Roles)
			{
				<div class="form-check">
					<input type="checkbox"
						   class="form-check-input"
						   name="SelectedRoles"
						   value="@role"
						   id="@role"
					@if (Model.SelectedRoles != null)
					{
						@(Model.SelectedRoles.Any(i => i == role) ? "checked" : "") @*burası bize userın hangi rolede oldugunu checkbox uzerinde gosterir selected*@
					} />
					<label for="@role" class="form-check-label">@role</label>
				</div>
			}

		</div>
	</div>

	<button type="submit" class="btn btn-primary">Kaydet</button>
</form>